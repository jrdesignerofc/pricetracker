// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Store {
  KABUM
  TERABYTE
  PICHAU
}

model Product {
  id            String         @id @default(cuid())
  name          String
  store         Store
  url           String         @unique
  sku           String?        @db.VarChar(64)
  isActive      Boolean        @default(true)
  lastCheckedAt DateTime?      // <-- NOVO: última verificação (pode ser null se nunca checou)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  priceHistory  PriceHistory[]

  @@index([store, isActive])
  @@index([lastCheckedAt])     // útil para diagnósticos/listagens
}

model PriceHistory {
  id           String   @id @default(cuid())
  productId    String
  priceDecimal Decimal  @db.Decimal(10, 2)
  currency     String   @default("BRL")
  collectedAt  DateTime @default(now())
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, collectedAt])
  @@unique([productId, collectedAt])
}

model FetchCache {
  id           String   @id @default(cuid())
  url          String   @unique
  etag         String?
  lastModified String?
  statusCode   Int?
  bodyHash     String?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  @@index([url])
}
